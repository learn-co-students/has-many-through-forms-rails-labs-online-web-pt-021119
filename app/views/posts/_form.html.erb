<%= form_for(@post) do |f| %>

     <%= f.label :title %>
     <%= f.text_field :title %>
     <%= f.label :content %>
     <%= f.text_area :content %>
     
     <%= f.label :category %>
     <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

     <%= f.fields_for :categories, @post.categories.new do |c| %>
        <%= c.text_field :name %>
        <%end%>

     <%= f.submit %>
<%end%>

