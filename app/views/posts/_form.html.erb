
<%= form_for @post do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :content %><br>
  <%= f.text_area :content %><br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
  <%= f.label :categories, "Other:" %>
  <%= f.fields_for :categories do |categories_fields| %>
    <%= categories_fields.text_field :name, placeholder: "Enter category" %>
  <% end %><br>
  <%= f.submit %>

<% end %>

