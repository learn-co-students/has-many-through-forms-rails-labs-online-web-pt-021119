<h1>Create New Post</h1>

<%= form_for @post do |p| %>
<%= p.label :title %><br>
<%= p.text_field :title %><br>
<%= p.label :content %><br>
<%= p.text_area :content %><br>
<%= p.label :categories %> <br>
<%= p.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
  <%= p.fields_for :categories, post.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %> <br>
  <% end %><br>
<%= p.submit %>

<% end %>
