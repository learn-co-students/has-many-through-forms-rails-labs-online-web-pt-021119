<%= form_for post do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %><br />

  <%= f.label :content %>
  <%= f.text_field :content %><br />

  Category:
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br />
  Or enter a new category:<br />
  <%= f.fields_for :categories, post.categories.build do |cat_fields| %>
    <%= cat_fields.label :name %>
    <%= cat_fields.text_field :name %>
  <% end %>
  <br /><br />

  <%= f.submit %>

<% end %>
