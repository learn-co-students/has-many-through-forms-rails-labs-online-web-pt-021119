<%= form_for(@comment) do |f| %>

    <%= f.label :content %>
    <%= f.text_area :content %>
    
    <%= f.label :username %>
    <%= f.collection_select :user_id, User.all, :id, :username %>

    <%= f.fields_for :user, @comment.user.new do |c| %>
       <%= c.text_field :username %>
       <%end%>

    <%= f.submit %>
<%end%>

